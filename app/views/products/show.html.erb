<div>
  <h2><%= @product.title %></h3>
</div>

<div>
  <h4>Description:</h4>
  <%= @product.body %>
</div>

<div>
  <h4>Price: <%= @product.price %></h4>
</div>

<% @product.pictures.each do |product_picture| %>
<div class="form-group">
  <%= image_tag product_picture.photo.url(:small), class: "img-rounded" %>
</div>
<% end %>

<div class="table-responsive">
  <table class="table table-bordered text-center" id="reviews">
    <tr class="bg-primary">
      <th  class="text-center">Review Text</th>
      <th></th>
      <th></th>
    </tr>
    <h2>Reviews</h2>
    <%= render @reviews %>
  </table>
</div>

<div class="form-group">
  <%= render partial: 'reviews/review_form' unless user_authorized(@product.user_id) || !user_signed_in? %>
</div>

<div class="form-group">
  <strong>Product Owner:</strong>
  <%= @user.first_name %>
  <%= @user.last_name %>
  <%= link_to 'Owner show page', user_path(@user), class: "btn btn-primary" %>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %> |
<%= link_to 'Go to Reviews Page', product_reviews_path(@product) %>
