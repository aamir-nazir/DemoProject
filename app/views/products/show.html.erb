<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Body:</b>
  <%= @product.body %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<% @product.pictures.each do |product_picture| %>
<div>
  <%= image_tag product_picture.photo.url, size: '200x200' %>
</div>
<% end %>

<div id="reviews">
  <p>Reviews :</p>
  <%= render @reviews %>
</div>

<%= render partial: 'reviews/review_form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %> |
<%= link_to 'Go to Reviews Page', product_reviews_path(@product.id) %>
