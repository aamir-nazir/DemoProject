<tr>
  <td><%= product.title %></td>
  <td><%= product.body %></td>
  <td><%= product.price %></td>
  <td><%= image_tag product.pictures.first.photo.url, size: '80x80', class: "img-rounded" if product.pictures.present? %></td>
  <% if user_authorized(@user.id) %>
    <td><%= link_to 'Show', product_path(product) %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>
