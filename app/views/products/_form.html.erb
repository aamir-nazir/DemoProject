<%= nested_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, required: true %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, required: true %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, required: true %>
  </div>

  <%= f.fields_for :pictures do |picture| %>
    <%= picture.label :photo %>
    <%= picture.file_field :photo %>
    <%= image_tag picture.object.photo.url, size: '200x200' if picture.object.photo.present? %>
    <%= picture.link_to_remove "Remove Picture" %>
  <% end %>
  <%= f.link_to_add "Add Picture", :pictures %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
