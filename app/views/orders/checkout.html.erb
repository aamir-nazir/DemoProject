<div class="row">
  <div class="col-md-12">
    <h1>Checkout Cart Products</h1>
    <div class="table-responsive">
      <table class="table table-bordered text-center", id="cart-table">
        <tr class="bg-primary">
          <th class="text-center">Title</th>
          <th class="text-center">Description</th>
          <th class="text-center">Price</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.body %></td>
            <td class="info" >$<%= product.price %></td>
          </tr>
        <% end %>
         </tr>
          <td class="info"></td>
          <td class="info"><strong>Total Price</strong></td>
          <% if @cart %>
            <td class="info" id="total-price">$<%= @price %></td>
          <% end %>
        </tr>
        <tr id="discount">
          <% if session[:discounted] == 1 %>
            <td class="info"></td>
            <td class="info"><strong>Discounted Price</strong></td>
            <td class="info" id="discount-price">$<%= discounted_price %></td>
          <% end %>
        </tr>
      </table>
      <div class="user-detail-margin">
        <div class="row">
          <div class="col-md-5">
            <%= render 'orders/user_details' %>
          </div>
        </div>
      </div>
      <div>
        <%= link_to 'Back', carts_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
