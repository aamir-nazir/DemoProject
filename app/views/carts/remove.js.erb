$('#cart-count').text('Total Cart Items: <%= cart_size %>');
$("#<%= @product.id %>").attr('href', '/carts/new');
$("#<%= @product.id %>").text('Add to cart');

if ($("#total-price"))
{
  $("#total-price").text('$<%= @price %>');
  $.cookie("price", <%= @price %>);
}

if ($("#discount-price"))
{
  $("#discount-price").text('$<%= discounted_price %>');
}
