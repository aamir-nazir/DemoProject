$('#cart-count').text('Total Cart Items: <%= cart_size %>');
$("#<%= @product.id %>").attr('href', '/carts/remove');
$("#<%= @product.id %>").text('Remove from cart');

if ($("#total-price"))
{
  $("#total-price").text('$<%= @price %>');
  $.cookie("price", <%= @price %>)
}

if ($("#discount-price"))
{
  $("#discount-price").text('$<%= @price * (100 - @discount)/100 %>');
}
