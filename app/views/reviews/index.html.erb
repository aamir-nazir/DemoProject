<h1>Listing reviews</h1>

<table>
<% @reviews.each do |review| %>
  <tr>
    <td><%= review.body %></td>
    <td><%= link_to 'Edit', edit_product_review_path(review.product, review) %></td>
    <td><%= link_to 'Destroy', product_review_path(review.product, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_product_review_path(params[:product_id]) %>
<%= link_to 'Back', product_path(params[:product_id]) %>